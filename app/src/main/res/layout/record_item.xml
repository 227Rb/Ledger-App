<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@android:color/white">

    <android.support.design.widget.FloatingActionButton
        android:layout_width="30dp"
        android:id="@+id/del_button"
        android:layout_height="30dp"
        android:visibility="gone"
        app:fabSize="mini"
        app:backgroundTint="#F01919"
        app:rippleColor="#C40101"
        android:layout_gravity="center"
        android:src="@drawable/record_del_buttom" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="30dp"
        android:id="@+id/updata_button"
        android:layout_marginLeft="5dp"
        android:layout_height="30dp"
        android:visibility="gone"
        app:fabSize="mini"
        app:backgroundTint="#FF9800"
        app:rippleColor="#FFC107"
        android:layout_gravity="center"
        android:src="@drawable/record_updata_buttom" />

        <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/item"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/time"
        android:layout_marginLeft="12dp"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="00:00" />

    <TextView

        android:textSize="20dp"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text=" - " />



    <ImageView
        android:id="@+id/sec_item_icon"
        android:src="@drawable/pay_alipay"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"/>

    <TextView

        android:textSize="20dp"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text=" - " />

    <ImageView
        android:id="@+id/categoy"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/big_eat"
        android:layout_gravity="center_vertical"/>

    <TextView

        android:textSize="20dp"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text=" - " />

    <TextView
        android:id="@+id/remark"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" T A G " />


    <TextView
        android:id="@+id/record_aomnt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="15dp"
        android:gravity="right|center_vertical"
        android:text=" 0000"
        android:textSize="20dp" />

</LinearLayout>

</LinearLayout>
